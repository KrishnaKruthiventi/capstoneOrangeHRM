<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="PIMTestSuite" parallel="tests" thread-count="2">

	<listeners>
		<listener class-name="listeners.TestListener"></listener>
		<listener class-name="listeners.ExtentReportListener"></listener>
	</listeners>

	<test name="AddAndDeleteEmployeeGroupTests">
		<groups>
			<run>
				<include name="addAndDeleteEmployee" />
			</run>
		</groups>
		<classes>
			<class name="tests.PIMPageTest" />
		</classes>
	</test>

	<test name="EmployeeSearchGroupTests">
		<groups>
			<run>
				<include name="employeeSearch" />
			</run>
		</groups>
		<classes>
			<class name="tests.PIMPageTest" />
		</classes>
	</test>

</suite>
